start function Calculate_area(Length, Width)
    declare Area = 0
    declare Pi = 3.14159
    declare Result_flag = true
    
    ## Check if dimensions are positive
    condition (Length > 0 && Width > 0)
        Area = Length * Width
        output "Area calculated successfully"
